<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_view_right"
        android:layout_marginEnd="@dimen/defult_dimen"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/appbar_padding"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_below="@+id/image_view_right"
        android:id="@+id/text_view_submission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_top_viewpager"
        android:layout_marginBottom="@dimen/appbar_padding"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_font_titleXXL"
        android:text="@string/submit_successful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>